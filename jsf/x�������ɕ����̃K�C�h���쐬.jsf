//ダイアログボックスを表示させる

var data = prompt("x軸に複数のガイドを引く","値をカンマで区切ってください");

//カンマを取り除き、配列に入れる

var myarray = data.split(",");

//配列から複数のガイドを作成

for(var i=0;i<myarray.length;i++){
	fw.getDocumentDOM().addGuide(myarray[i], "vertical");
}
